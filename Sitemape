// server.js
const express = require('express');
const app = express();

const sitemapRoute = require('./routes/sitemap');
app.use('/', sitemapRoute);

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log(`Sitemap server running at http://localhost:${PORT}`);
});

// routes/sitemap.js
// Create this file in a 'routes' folder

const express = require('express');
const router = express.Router();

// Example dynamic content (can replace with DB call)
const movies = [
  { slug: 'avengers-endgame', updatedAt: '2024-06-01' },
  { slug: 'dune-part-two', updatedAt: '2024-05-15' },
  { slug: 'the-batman', updatedAt: '2024-04-10' }
];

router.get('/sitemap.xml', (req, res) => {
  res.header('Content-Type', 'application/xml');
  let sitemap = `<?xml version="1.0" encoding="UTF-8"?>\n`;
  sitemap += `<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">\n`;

  movies.forEach(movie => {
    sitemap += `
  <url>
    <loc>https://movieshub-bd-bzhg.onrender.com/movies/${movie.slug}</loc>
    <lastmod>${movie.updatedAt}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>`;
  });

  sitemap += `\n</urlset>`;
  res.send(sitemap);
});

module.exports = router;
